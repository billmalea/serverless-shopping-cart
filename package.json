{
  "name": "serverless-shopping-cart",
  "version": "0.1.0",
  "private": true,
  "description": "Serverless shopping cart scaffold (AWS SAM + TypeScript)",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "dev": "ts-node-dev --respawn --transpile-only src/handlers/placeholder.ts",
    "test": "jest --passWithNoTests",
    "lint": "eslint './src/**/*.ts' --fix",
    "format": "prettier --write './**/*.{ts,js,json,md}'"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.114",
    "@types/jest": "^29.5.2",
    "eslint": "^8.0.0",
    "jest": "^29.6.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.0"
  }
}
